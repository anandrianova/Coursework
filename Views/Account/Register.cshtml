@model SportCoursework.Models.AppUser
@{ Layout = "_Layout"; }

<div class="card p-4 mx-auto shadow-lg" style="max-width: 500px; margin-top: 50px; border-radius: 15px;">
    <h3 class="text-center fw-bold mb-3">Регистрация</h3>
    
    <div asp-validation-summary="All" class="text-danger small mb-3"></div>

    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="mb-2">
            <label class="small fw-bold">Email</label>
            <input name="email" type="email" class="form-control" required />
        </div>
        
        <div class="mb-2">
            <label class="small fw-bold">Пароль</label>
            <input name="password" type="password" class="form-control" required />
        </div>

        <div class="row g-2 mb-2">
            <div class="col">
                <label class="small fw-bold">Рост</label>
                <input name="height" type="number" class="form-control" value="170" />
            </div>
            <div class="col">
                <label class="small fw-bold">Вес</label>
                <input name="weight" type="number" class="form-control" value="70" />
            </div>
        </div>

        <div class="mb-3">
            <label class="small fw-bold">Возраст</label>
            <input name="age" type="number" class="form-control" value="25" />
        </div>

        <div class="mb-4">
            <label class="small fw-bold">Вид спорта</label>
            <select name="sportType" class="form-select">
                <option value="Running">Бег</option>
                <option value="Swimming">Плавание</option>
                <option value="Volleyball">Волейбол</option>
                <option value="Dancing">Танцы</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary w-100 fw-bold py-2">Зарегистрироваться</button>
    </form>
</div>